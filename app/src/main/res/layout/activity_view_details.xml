<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainpage"
    tools:context="com.example.bikes24.ViewDetails">

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:fontFamily="serif-monospace"
        android:text="view all details"
        android:textAllCaps="true"
        android:textColor="?attr/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button34"
        style="@android:style/Widget.DeviceDefault.Button.Toggle"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView31"
        android:layout_marginStart="27dp"
        android:layout_marginTop="43dp"
        android:background="@drawable/automobilee"
        android:onClick="automobiles"
        android:text="automobiles"
        android:textColor="@android:color/background_light"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button35"
        style="@android:style/Widget.DeviceDefault.Light.Button.Toggle"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/button36"
        android:layout_below="@+id/button34"
        android:layout_marginTop="29dp"
        android:background="@drawable/automobile"
        android:onClick="employees"
        android:text="employees"
        android:textColor="@android:color/background_light"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button36"
        style="@android:style/Widget.DeviceDefault.Button.Toggle"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/button34"
        android:layout_alignBottom="@+id/button34"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/button34"
        android:background="@drawable/viewcustomer"
        android:onClick="customers"
        android:text="Customers"
        android:textAlignment="center"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button37"
        style="@android:style/Widget.DeviceDefault.Button.Toggle"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/button35"
        android:layout_alignBottom="@+id/button35"
        android:layout_alignStart="@+id/button34"
        android:background="@drawable/viewcustomer"
        android:onClick="sales"
        android:text="sales"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button38"
        style="@android:style/Widget.DeviceDefault.Light.Button.Toggle"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/button35"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="@drawable/automobile"
        android:onClick="complaints"
        android:text="Complaints"
        android:textColor="@android:color/background_light"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button12"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button38"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:fontFamily="serif"
        android:onClick="back"
        android:text="Back"
        android:textSize="16dp"
        android:textStyle="bold" />

</RelativeLayout>
